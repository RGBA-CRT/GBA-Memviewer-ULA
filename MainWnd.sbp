			EnableWindow(MWnd( CommandButton2  ),TRUE)
			EnableWindow(MWnd( CommandButton3  ),TRUE)
			EnableWindow(MWnd( CommandButton4  ),TRUE)
			EnableWindow(MWnd( CommandButton5  ),TRUE)
			EnableWindow(MWnd( CommandButton6  ),TRUE)
			EnableWindow(MWnd( CommandButton7  ),TRUE)
			EnableWindow(MWnd( CommandButton8  ),TRUE)
			EnableWindow(MWnd( CommandButton9  ),TRUE)
			EnableWindow(MWnd( CommandButton10 ),TRUE)
			EnableWindow(MWnd( CommandButton11 ),TRUE)
			EnableWindow(MWnd( CommandButton12 ),TRUE)
			EnableWindow(MWnd( EDIT_DUMP ),TRUE)
			EnableWindow(MWnd( AddressBox ),TRUE)
			EnableWindow(MWnd( Static1 ),TRUE)
		Case WE_NOCONNECT
			'初期状態（接続ボタン以外OFF）
			EnableWindow(MWnd( CommandButton1  ),TRUE)
			EnableWindow(MWnd( CommandButton2  ),FALSE)
			EnableWindow(MWnd( CommandButton3  ),FALSE)
			EnableWindow(MWnd( CommandButton4  ),FALSE)
			EnableWindow(MWnd( CommandButton5  ),FALSE)
			EnableWindow(MWnd( CommandButton6  ),FALSE)
			EnableWindow(MWnd( CommandButton7  ),FALSE)
			EnableWindow(MWnd( CommandButton8  ),FALSE)
			EnableWindow(MWnd( CommandButton9  ),FALSE)
			EnableWindow(MWnd( CommandButton10 ),FALSE)
			EnableWindow(MWnd( CommandButton11 ),FALSE)
			EnableWindow(MWnd( CommandButton12 ),FALSE)
			EnableWindow(MWnd( EDIT_DUMP ),FALSE)
			EnableWindow(MWnd( AddressBox ),FALSE)
			EnableWindow(MWnd( Static1 ),FALSE)
			EnableWindow(MWnd( AddressBox ),FALSE)
		Case WE_WORKING
			'通信中
			EnableWindow(MWnd( CommandButton1  ),FALSE)
			EnableWindow(MWnd( CommandButton2  ),FALSE)
			EnableWindow(MWnd( CommandButton3  ),FALSE)
			EnableWindow(MWnd( CommandButton4  ),FALSE)
			EnableWindow(MWnd( CommandButton5  ),FALSE)
			EnableWindow(MWnd( CommandButton6  ),FALSE)
			EnableWindow(MWnd( CommandButton7  ),FALSE)
			EnableWindow(MWnd( CommandButton8  ),FALSE)
			EnableWindow(MWnd( CommandButton9  ),FALSE)
			EnableWindow(MWnd( CommandButton10 ),FALSE)
			EnableWindow(MWnd( CommandButton11 ),FALSE)
			EnableWindow(MWnd( CommandButton12 ),FALSE)
			EnableWindow(MWnd( EDIT_DUMP ),FALSE)
			EnableWindow(MWnd( AddressBox ),FALSE)
			EnableWindow(MWnd( Static1 ),FALSE)
			EnableWindow(MWnd( AddressBox ),FALSE)
		Case WE_READY
			'操作待ち
			EnableWindow(MWnd( CommandButton1  ),FALSE)
			EnableWindow(MWnd( CommandButton2  ),TRUE)
			EnableWindow(MWnd( CommandButton3  ),TRUE)
			EnableWindow(MWnd( CommandButton4  ),TRUE)
			EnableWindow(MWnd( CommandButton5  ),TRUE)
			EnableWindow(MWnd( CommandButton6  ),TRUE)
			EnableWindow(MWnd( CommandButton7  ),TRUE)
			EnableWindow(MWnd( CommandButton8  ),TRUE)
			EnableWindow(MWnd( CommandButton9  ),TRUE)
			EnableWindow(MWnd( CommandButton10 ),TRUE)
			EnableWindow(MWnd( CommandButton11 ),TRUE)
			EnableWindow(MWnd( CommandButton12 ),TRUE)
			EnableWindow(MWnd( EDIT_DUMP ),TRUE)
			EnableWindow(MWnd( AddressBox ),TRUE)
			EnableWindow(MWnd( Static1 ),TRUE)
			EnableWindow(MWnd( EDIT_DUMP ),TRUE)
	EndSelect
EndSub
Sub DoWork(Text AS BytePtr)
	DBM(Text):	SetWindowEnable(WE_WORKING)
EndSub

Sub ExitWork()
	DBM("GBA connection is Active!"):	SetWindowEnable(WE_READY)
EndSUb


